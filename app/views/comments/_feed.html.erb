<div class="comment-feed" data-behavior="comment-feed">
  <% cache ['comment-feed', @comments, @commentable] do %>
    <div class="comment-list">
      <%= render(partial: 'comments/comment', collection: @comments, cached: true) if @comments.any? %>
      <div data-notice="no-comments" class="comment <%= 'd-none' if @comments.any? %>">
        There have been no comments yet.
      </div>
    </div>
  <% end %>
  <%= render 'comments/new' %>
</div>
